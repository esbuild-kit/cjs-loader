{
	"compilerOptions": {
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"target": "esnext",

		// Prevents mts -> mjs conversion
		// "moduleResolution": "node",
		"paths": {
			"utils/*": [
				"./tests/utils/*"
			]
		}
	},
	"include": [
		"src",
		"tests"
	],
	"exclude": [
		"tests/fixtures"
	]
}
